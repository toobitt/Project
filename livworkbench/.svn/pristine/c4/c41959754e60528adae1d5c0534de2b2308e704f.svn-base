
#thelist{padding-top:10px; }
.detail-list{padding-top:10px; }
.second-body{width:100%; overflow:hidden; }

/*栏目列表*/
.subnav{display:none; }
.nav-box{background: #f9f9f9; border: 0; }
#arrow {width: 50px; -webkit-box-flex: 0; -webkit-box-align: center; -webkit-box-pack: center; display: block; font-size:1.5em; color:#fff; cursor:pointer; background-color:rgba(59, 154, 198, 0.9);}
.nodata{font-size:2em; margin-top:30px; color:#999; text-align:center;}

.list-item{height:90px; margin:0 10px 10px;}
.list-item a{color:#000;}
.list-item .list-pic{margin:0 20px 0 15px;}
.list-item .channel-name{font-size:2.6em; padding-bottom:8px;}
.list-item p{color:#999;font-size:2.2em; white-space: nowrap;overflow: hidden;text-overflow: ellipsis;}
.list-item .live-name{color:#3b9ac6; margin-left:10px; }
.list-item .live-flag{display:block;cursor:pointer;height:100%;width:70px; font-size:0; background:url(../images/live/live-icon-play-l.png) center no-repeat #fafafa;}
.list-item .live-flag.broadcast{background-image:url(../images/live/live-icon-headphone-l.png);}
.list-item.is-play .live-flag.broadcase{background-image:url(../images/live/live-icon-headphone-l-playing.png);}

.detail-list .list-item{height:65px; line-height:65px; font-size:2.4em; color:#999; position:relative; background-color:#f2f2f2;}
.detail-list .list-item .state{width:105px; position:absolute; left:0; text-align:center; color:#fff; background-color:#3b9ac6; display:none; }
.detail-list .list-item.current .state{display:block; }
.detail-list .live-time{width:105px;background:#eee;text-align:center;}
.detail-list .live-name{text-indent:15px;color:#999;}
.detail-list .live-flag{width:60px; background:url(../images/live/live-icon-play-s.png) no-repeat center #fafafa;}
.detail-list .live{background-color:#fff;}
.detail-list .live .live-time{background:#fafafa;}
.detail-list .live .nowplay{color:#3b9ac6;}
.detail-list .current{background:#4da2ca;color:#fff;}
.detail-list .current .live-name{color:#fff;}
.detail-list .current .live-time{background:#3b9ac6;}
.detail-list .current .live-flag{background-image:url(../images/live/live-icon-play-s-white.png);background-color:#3b9ac6;}

.detail-cover{width:100%; height:100%; position:absolute; left:0; top:0; background-color:rgba(0, 0, 0, 0.4); display:none; }
.player-wrap{overflow:hidden;background-color:#000;text-align:center;}
.playlist-wrap{position:fixed; left:0; top:100%; height:100%; z-index:999; width:100%; -webkit-transition:top .3s; }
.playlist-wrap.show{top:76px!important; }
.playlist-inner{height:100%; background-color:#eee; }


/* 广播播放器样式 */
.broadcast-play-wrap{height:105px;width:100%;}
.broadcast-play-box{position:fixed;bottom:65px;width:100%;}
.broadcast-play-wrap .flag{height:40px;text-align:center;color:#666;font-size:1.8em;line-height:40px;background:rgba(204,204,204,.8);}
.broadcast-player{height:65px; line-height:65px; background-color:#3b9ac6; position:relative;}
.broadcast-player .btn{display:inline-block;width:65px;height:65px; vertical-align:top; position:absolute; background:url() no-repeat center #288AB7; cursor:pointer; }
.broadcast-player .pause{background-image:url(../images/live/live-simpleplayer-icon-pause.png);}
.broadcast-player .on{background-image:url(../images/live/live-simpleplayer-icon-play.png);}
.play-wrap{font-size:0; }
.box-progress{display:inline-block; line-height: 65px; height:65px; width:100%; padding-left:65px; text-align: center; box-sizing: border-box; }
.box-progress em{display:inline-block; width:2px; height:15px; background-color:#fff; vertical-align:middle;}
.play-progress{display:inline-block; width:80%; height:7px; background-color:#288AB7; vertical-align:middle;}

/* 点播 */
.vod-channel-list .each-list{margin-bottom:10px;border-bottom:2px solid #cbcbcb;}
.vod-channel-list .list-item{margin-bottom:0;border:none;height:45px;}
.vod-channel-list .list-pic{height:25px;width:40px;}
.vod-channel-list .channel-name{padding:0;}
.vod-channel-list .live-flag{background:url(../images/vod/vod-item-collapse-arrow-down.png) no-repeat center #fafafa;}
.vod-channel-list .program-wrap{display:none;transition:all ease-in .3s;background:#fff;-webkit-column-gap:10px;column-gap:10px;padding:10px 10px 0;border-top:1px solid #ddd;}
.vod-channel-list .current .live-flag{background-image:url(../images/vod/vod-item-collapse-arrow-up.png);}
.vod-channel-list .current .program-wrap{display:block;}
.vod-channel-list .current .list-item{background:#fafafa;}
.vod-channel-list .program-item{cursor:pointer;height:30px;line-height:30px;background:#eee;margin-bottom:10px;text-align:center;font-size:14px;color:#666;}
.vod-channel-list .program-item:hover{background:#ddd;}

.second-body .subnav .ui-navigator-list li a{font-size:1.2em; }

@media only screen and (-webkit-min-device-pixel-ratio: 2),
only screen and (-moz-min-device-pixel-ratio: 2),
only screen and (-o-min-device-pixel-ratio: 2/1),
only screen and (min-device-pixel-ratio: 2) {
	.list-item .live-flag{background-image:url(../images/live/live-icon-play-l-2x.png);background-size:56px 56px;}
	.list-item .live-flag.broadcast{background-image:url(../images/live/live-icon-headphone-l-2x.png);}
	.list-item.is-play .live-flag.broadcast{background-image:url(../images/live/live-icon-headphone-l-playing-2x.png);}
	.detail-list .live-flag{background-image:url(../images/live/live-icon-play-s-2x.png);background-size:44px 44px;}
	.detail-list .current .live-flag{background-image:url(../images/live/live-icon-play-s-white-2x.png);}
	.broadcast-player .pause{background-image:url(../images/live/live-simpleplayer-icon-pause-2x.png); background-size:50px 50px;}
	.broadcast-player .on{background-image:url(../images/live/live-simpleplayer-icon-play-2x.png); background-size:50px 50px;}
	.vod-channel-list .live-flag{background-image:url(../images/vod/vod-item-collapse-arrow-down-2x.png);background-size:56px 45px;}
	.vod-channel-list .current .live-flag{background-image:url(../images/vod/vod-item-collapse-arrow-up-2x.png);}
}
