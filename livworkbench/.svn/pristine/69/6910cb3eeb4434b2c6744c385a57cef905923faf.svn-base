html, body{width:100%; height:100%; }
body{color:#3b3b3b; }
#wrapper{position:absolute; top:145px; left:0; bottom:0; overflow:auto; width:100%; }
#scroller{position:relative; float:left; width:100%; }
#scroller ul{position:relative;}
/*nav*/
.subnav .item{font-size:1.6em;}

/*路况*/
.road-list .nodata{line-height:260px; margin-top:30px; color:#999; text-align:center; background:url("../images/road/road_nodata.png") no-repeat center top;}
.road-list{margin-top:10px; }
.road-item{ background-color: #fff; padding:10px; margin-bottom: 10px; border-bottom: 2px solid #cbcbcb;}
.road-item .info{line-height: 22px; color:#999; }
.road-item .info a{color:#999;}
.road-item .detail{margin-top:10px; }
.road-item .type{display:inline-block; height:20px; line-height:20px; padding:0 5px; background-color:#ff9600; 
	color:#fff; border-radius:3px; font-size:14px;}
.road-item .type.congestion{background-color:#e60000; }
.road-item .type.accident{background-color:#0c3b90; }
.road-item .type.regulate{background-color:#0070e3; }
.road-item .type.construct{background-color:#6cb700; }
.road-item .ntime{float:right; margin-top:3px; color:#999; }

@media only screen and (-webkit-min-device-pixel-ratio: 2),
only screen and (-moz-min-device-pixel-ratio: 2),
only screen and (-o-min-device-pixel-ratio: 2/1),
only screen and (min-device-pixel-ratio: 2) {
	.road-list .nodata{background-image:url("../images/road/road_nodata-2x.png"); background-size:150px 100px;}
}











