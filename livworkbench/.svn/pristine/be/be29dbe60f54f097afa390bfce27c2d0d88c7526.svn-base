<html>
	<head>
    <link rel="stylesheet" type="text/css" href="css/style.css">
   <meta http-equiv="Content-Type" content="application/vnd.wap.xhtml+xml;charset=utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <script src="js/jquery-2.1.3.min.js"></script>
    <script type="text/javascript">
    $(function(){
        $(".menu-btn").on("click",function(){
           var parent=$(this).closest(".nav-wraper");
           var div=$(parent).next(".menu-box");
           div.css('opacity','1');
           div.removeClass("menu-box-out");
           div.addClass("menu-box-in");  

        })
        $(".cmenu-btn").on("click",function(){
            var parent=$(this).closest(".menu-box");
            parent.removeClass("menu-box-in");
            parent.addClass("menu-box-out");
            parent.css('opacity','0');
        });
        
        $('.sendmsg').on('click',function(){
        	top.window.postMessage({status:true,msg:'登录成功'},'*');
        });
        
        window.addEventListener('message',function(event){
        	console.log( event );
        	$('.msg').text( event.data );
        },false);
        
    })

    </script>
	</head>
	<body>
    <div class="nav-wraper flex-box">
        <div class="logo-item flex-box-two"></div>
        <div class="menu-item flex-box-one">今日</div>
        <div class="menu-item flex-box-one">品牌</div>
        <div class="menu-item flex-box-one">生活</div>
        <div class="menu-btn flex-box-one"></div>
    </div>
    <button class="sendmsg">发消息给父窗口</button>
    <div><span>接收父窗口发来的消息:</span><span class="msg" style="color:red;"></span></div>
    <div class="menu-box">
        <div class="cmenu-btn"></div>
        <ul>
        <li class="famous-item">聚名品</li>
        <li class="tour-item">旅游团</li>
        <li class="beauty-item">聚美妆</li>
        <li class="home-item">聚家装</li>
        <li class="limit-item">量贩店</li>
        <li class="baby-item">Baby购</li>
        <li class="cheap-item">搜划算</li>
        </ul>
    </div>       
	</body>
</html>