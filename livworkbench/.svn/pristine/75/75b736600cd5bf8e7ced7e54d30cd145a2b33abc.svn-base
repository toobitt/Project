<script type="text/javascript">
	function index(){
		var url = getUrl('index'),
			colorStae = ["red-bg", "blue-bg", "gray-bg"];
		getAjax(url, {type : 'record'}, function( data ){
			$.each(data, function(kk, vv){
				vv.colorClass = colorStae[vv.state];
			});
			var html = template('record', {list : data}),
				target = $('.order-lists').find('ul');
			target.append( html );
		})
	}
	index();
</script>
<script id="record" type="text/html">
{{each list as value i}}
    <li class="item-content">
		<a href="./order_detail_post.html">
			<div class="m2o-flex m2o-flex-center order-info">
				<div class="m2o-flex-one">订单号：{{value.order}}</div>
				<div>{{value.create_time}}</div>
			</div>
			<div class="m2o-flex goods-info">
				<div class="item-media">
					<img src="{{value.image}}">
				</div>
				<p class="item-title m2o-flex-one">{{value.title}}</p>
				<div class="count">x{{value.num}}</div>
			</div>
			<div class="m2o-flex m2o-flex-center other-info">
				<div class="m2o-flex-one">
					<span class="status {{value.colorClass}}">{{value.status}}</span>
				</div>
				<span class="item-credits red-color">{{value.credit}}</span>
			</div>
		</a>
	</li>
{{/each}}
</script>
