/*商品列表页*/
.product-list{padding:20px;margin-right:-30px;}
.product-item{position:relative;display:inline-block;width:230px;margin:0 30px 20px 0;}
.product-item .prev{height:170px;position:relative;cursor:pointer;}
.product-item.selected .prev{box-shadow:0 0 0 2px #000;}
.product-item .prev img{width:100%;height:100%;}
.product-item .prev .sort{position:absolute;height:22px;line-height:22px;background:black;color:white;left:0;bottom:0;right:0;padding:0 5px;}
.product-item .info{margin-top:3px;}
.product-item .name{font-size:14px;}
.product-item .type{color:#9f9f9f;}
.product-item .count span{margin-right:3px;color:#91b5d5;}
.product-item .time{color:#999;}
.product-item p{line-height:24px;}
.product-item .del{display:none;position:absolute;top:0;right:0;width:24px;height:24px;cursor:pointer;background:url({$RESOURCE_URL}market/del.png) no-repeat center;}
.product-item .audit{position:absolute;bottom:3px;right:3px;cursor:pointer;}
.product-item:hover .del{display:block;}
.product-item .check-order{text-decoration: underline;color: #9093b3;cursor:pointer;}

.switch-slide.ui-slider{position:absolute;left:8px;top:5px;width:14px;height:10px;background:none;border:none;}
.common-switch{float:left;margin-right:5px;width:32px; height:20px; border-radius:10px; background-color:#aaa; position:relative;}
.common-switch-on{background-color:#4dd865; }
.ui-slider-horizontal .ui-slider-handle{cursor:pointer;border-radius:16px;z-index:9999;position:absolute;}

.product-bottom{background-color: #f9f9f9;border-top: 1px solid #c8d4e2;min-height: 43px;line-height:43px;padding:0 5px;}
.product-bottom input{height:auto;margin-right:3px;}
.product-bottom input:focus{box-shadow:none;}
.product-bottom a{cursor:pointer;}

.handler-btns{height:40px;padding:10px 25px 0;margin-bottom:-10px;}
.order-btn{float:right;cursor:pointer;display:inline-block;padding:0 15px;border-radius:2px;height:34px;line-height:34px;background:#1bbc9b;color:white;}