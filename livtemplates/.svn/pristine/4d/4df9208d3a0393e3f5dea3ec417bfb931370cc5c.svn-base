<div id="showContainer">	<table cellspacing="0" cellpadding="0" border="0" width="100%" class="show_data">		<thead>			<tr>				<th>ID</th>				<th>菜单名称</th>				<th>菜单链接</th>				<th>操作</th>			</tr>		</thead>		<tbody id="shortcutmenuTable">			{foreach $menus as $v}			<tr class="shortcutmenu_{$v['id']}">				<td><input type="checkbox" name="shortcutMenuId[]" class="shortcutMenu" value="{$v['id']}" title="{$v['id']}" /></td>				<td>{$v['menu_name']}</td>				<td>{$v['menu_link']}</td>				<td><span class="op_btn menuModify" uri="?a=get_one_shortcut_menu&m_id={$v['id']}">编辑</span>&nbsp;|&nbsp;<span class="op_btn menuDrop" uri="?a=drop_shortcut_menu&m_id={$v['id']}">删除</span></td>			</tr>			{/foreach}		</tbody>	</table>	<div class="bottom_op">		{$pagelink}		<p class="op_nav"><span m="selectAll">全选</span>&nbsp;|&nbsp;<span m="addMenu">添加</span>&nbsp;<span m="dropMenu">删除</span>&nbsp;<span m="reload">刷新</span></p>	</div></div>