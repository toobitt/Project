 @import 'http://localhost/livtemplates/tpl/lib/less/common_less.less';
.magazine-list{min-height:540px; padding:@m10 - 2px @m10;
  li{ float:left; position:relative; width:@w150; height:@h246; margin:@m10 + 2px;
     &:not(:last-child):hover .mag-img:after, &.selected .mag-img:after{.position-lefttop(0, 0); content:''; width:150px; height:195px; .box-shadow(0, 0, 0, 2px, 1, inset);}
     &:hover .period-href, &.selected .period-href{background-color:#a5c73c; }
     &:hover .del{display:block;}
  }
}
.magazine-each{
    input{display:none; }
    h4{ height:@h25; line-height: @h25; margin-top:@m10 - 4px; .ellipsis;}
    p{color:@color-gray; margin-top:@m10/5; .ellipsis;
      span{margin-right:@m10/2; }
    }
} 
.mag-img{width:@w150; height: @h195; .box-module(border-box); 
   img{width:100%; height:100%;}
   .newest-href{.position-lefttop(0, 0); width:100%; height:@h195; z-index: @z99; }
   p{width:@w150 - 5px; height:@h25 - 1px; line-height:@h25 - 1px; color:lighten(@color-gray,40%); .position-lefttop(0, 169px);
     z-index:@z99*10 + 8; background-color:darken(@color-gray,40%); padding-left:@m10/2;}
   .m2o-state{font-style:normal; cursor:pointer; display:inline-block; width:@w43; height:@h25 - 3px; background-color:lighten(@color-gray,40%);
      text-align:center; color:darken(@color-gray,60%); margin-left:-3px; margin-right:2px; position:relative; }
   .audit{ .position-righttop(0, 0); line-height:@h25 - 3px; margin-left:0;}
  }
.period-href, .del{ height:@h25 - 3px; width:@h25 - 3px; position:absolute; z-index:@z99*10 + 9;}
.period-href{background: url("@{path}/common/icon_info.png") no-repeat scroll center; right:@m10/5; top:@h195 - @h25 + 1px; }
.del{background: url("@{path}/icon/close.png") no-repeat scroll center; right:-@m10; top:-@m10; display:none;}
.magazine-add{
  > div{background: url("@{path}/magazine/magimg-add.png") no-repeat scroll center 62px #f0f0f0; font-size:@font-size12 + 6px;
  color:@color-gray; border:1px solid #cfcfcf; text-align:center; line-height:@h246 - 6px; cursor:pointer;}
}

/*底部操作*/
.record-bottom{background-color:lighten(@color-gray,37%) + #020202; border-top:1px solid @color-c8d4e2; min-height:@w43;}
.record-operate{width:@w150*2; line-height:@w43; padding-left:@w150/10; 
  input{height:@m10 + 3px; }
  a{cursor:pointer; margin:0 @m10/2; text-decoration:underline; line-height:@h25 + 3px; }
}

/*增加杂志弹框*/
.pop-add-mag{.position-lefttop(50%, 0); width:@h246*2 + 16px; margin-left:-@h246 - 8px; border:@m10 solid @color-6ea5e8;
  z-index:@z99*10 + 9; .transition(all, 0.5s, ease);}
.pop-add-title{line-height: @h25; padding-bottom:@m10; font-size:@font-size12 + 6px; color: lighten(@color-gray,40%); background-color:@color-6ea5e8; 
  p{width:@h195 + 5px; display: inline-block; }
}
.pop-menu{float:right;
  .pop-save-button{.position-righttop(31px, 0 );}
  .pop-close-button2{.position-righttop(0, 0 );}
}
.pop-add-content{background-color:lighten(@color-gray,40%); padding:@m10 0 @m10 *2;}
.m2o-tent{display:inline-block; padding:@m10 - 3px 0 @m10 - 3px @m10; color:lighten(@color-gray,24%) + #010101;
  label{width:@h25*2 + 2px; text-align:right; min-height:@h25 - 1px; line-height: @h25 - 1px; margin-right:@m10/2; display:inline-block;
     vertical-align:top; color:@color-gray;}
  span{font-size:@font-size12 + 2px; color:darken(@color-gray, 60%); line-height: @h25 + 1px;}
  input{font-size:@font-size12 + 2px; color:darken(@color-gray, 60%); line-height: @h25 + 1px;
    border:1px solid #d7d7d7; height:@h25 - 3px; margin:0 @m10/5; text-indent:@m10 - 4px; width:@w43*2 + 7px;}
  textarea{width:@h246+@w150; height:@h25*2 + 2px; font-size:@font-size12 + 2px;}
  select{margin-right:@m10*3 + 4px;}
}
.pop-title input{ width:@h246 - 33px; }
.pop-text{ 
  ul{display:inline-block; }
  li{ margin-bottom:10px;}
  .contract-name{width:70px; margin-right:5px; }
  .contract-value{width:175px; }
}
.pop-box li{
    a{display:inline-block; width:@m10*2; height:@m10*2; .transition(opacity, 0.3s, ease-in); vertical-align:top; margin:4px 0 0 2px;}
    &:hover .text-del{opacity: 1;}
}
.text-del{background: url("@{path}magazine/text-del.png") no-repeat scroll center; opacity: 0; }
.text-add{background: url("@{path}magazine/text-add.png") no-repeat scroll center; opacity: 1; }
.pop-add-mag .down_list{display: inline-block; height:@h25; border:1px solid lighten(@color-gray,20%); width:113px!important;
  .input_left, .input_right{display:none;}
  .input_middle{border:none; height:@h25;}
  label{color:darken(@color-gray,60%); font-size:@font-size12 + 2px; width: @w43*2 - 1px; text-align:left;}
  ul{top:@h25 + 1px; max-height:208px;
    li{line-height:@h25;
      a{font-size:@font-size12 + 2px;}
    }
  }
}
.pop-secondary{
  label{width:@m10*10 + 6px; }
  input{width:@w150 + 25px;}
} 
.pop-hide{opacity:0; top:-800px;}
.add-lastest{.position-righttop(103px, -60px );}




