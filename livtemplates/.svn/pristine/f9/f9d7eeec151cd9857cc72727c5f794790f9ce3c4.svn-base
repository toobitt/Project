<div class="my_pleft" style="position:relative;zoom:1;">	<div class="head-img-wrap">		<img src="{$avatar}" width="180" height="225" id="head-img">		{if $is_my_page}		    <div class="head-button">		    	<div class="head-button-desc">+<span> 上传头像</span></div>		    	<div class="head-button-opacity"></div>			<form enctype="multipart/form-data" action="member.php?a=material" target="head-iframe" method="post">			    <input type="file" id="head-file" name="avatar"/>			</form>			<iframe name="head-iframe" style="display:none;" src=""></iframe>			</div>		{/if}	</div>		{if !$is_my_page}		<h2 class="my_guan" id="target_{$uid}">		{if $relation == 0}			<a href="javascript:void(0);" id="delBlock">解除黑名单</a>		{/if}				{if $relation == 1}			<a>相互关注</a>			<a href="javascript:void(0);" class="relative-del" onclick="delFriends({$uid},'',{$is_my_page})">解除关注</a>		{/if}		{if $relation == 2}			<a>已关注</a>			<a href="javascript:void(0);" class="relative-del" onclick="delFriends({$uid},'',{$is_my_page})">解除关注</a>		{/if}				{if $relation == 3 || $relation == 4}			<a href="javascript:void(0);" class="relative-add" onclick="addFriends({$uid},{$relation},'',{$is_my_page})">加关注</a>		{/if}	{/if}	</h2>	<!--<p>如你所说 风雨兼程</p>	<p><a href="#"></a></p>-->	<hr class="hr_green">	{if $is_my_page}	<h2>	<a href="activitys.php?a=create">	<img src="{$RESOURCE_URL}qingao/qw_menu_bg.png">	</a>	</h2>	{/if}	<ul class="my_zhu">		{if !$is_my_page}<li><a href="#">{$owner}的主页</a></li>{/if}		<li><a href="member.php?a=edit&uid={$uid}">{if !$is_my_page}查看{/if}{$owner}的资料</a></li>
		<!--  <li><a href="#">评论</a></li>-->
		{if $owner == 'TA'}		<li class="my_zhu_msg"><a href="javascript:void(0);" data-uid="{$_INPUT['uid']}">私信</a></li>		<li><a href="#">@TA</a></li>		{/if}	</ul>		<script type="text/javascript">	jQuery(function($){	    function init(){	        $('#head-file').off('change').on('change', function(){                $(this).parent().submit();                $(this).replaceWith('<input type="file" id="head-file" name="avatar"/>');                init();            });	    }        init();        window.headImgCallback = function(src){            if(src){                $('#head-img').attr('src', src);            }        };	});	</script></div>