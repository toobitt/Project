{foreach $action as $k=>$v}		{if $v['id'] && $k !='total'}<li>{code}	$url = $url1 = $url2 =  '';	$url1 .= isset($v['host']) ? $v['host'] : "";	$url1 .= isset($v['dir']) ? $v['dir'] : "";	$url2 .= isset($v['filepath']) ? $v['filepath'] : "";	$url2 .= isset($v['filename']) ? $v['filename'] : "";	$url = (!empty($url1) && !empty($url2)) ? ($url1."175x150/".$url2) : "images/my_img3.jpg";{/code}	<a href="activity.php?action_id={$v['id']}"><img src="{$url}"></a>	<div class="my_xqright">		<h4><a href="#">{code}echo hg_cutchars(strip_tags($v['action_name']), 15);{/code}</a></h4>		<p class="jian">{code}echo hg_cutchars(strip_tags($v['introduce']), 23);{/code}</p>		<p>开始时间：{code}echo hg_get_date($v['start_time']);{/code}</p>		<p>地点：{code}echo hg_cutchars(strip_tags($v['place']), 12);{/code}/参加人数：{$v['yet_join']}人</p>		<p>3赞&nbsp;&nbsp; {$v['collect_num']}分享&nbsp;&nbsp; 3回应</p>	</div></li>{/if}{/foreach}