{if !empty($statusinfo)}<style type="text/css">.moreBtn {text-align:center; padding:10px; font-size:12px; border:1px dotted #CCC; margin:20px 10px; cursor:pointer; color:#6B9FCF;}.overintro {text-align:center; padding:10px; font-size:12px; margin:20px 10px; color:#6B9FCF;}</style><ul id="show_mBlog">{template:unit/status_line}</ul>{if $hasMore}<p class="moreBtn" m="{$method}">点击加载更多</p><script type="text/javascript">$(function() {	var page = 2;	$('.moreBtn').click(function() {		var _this = $(this);		var _v = _this.html();		var method = _this.attr('m');		$.ajax({			type : 'get',			url : 'user.php',			data : 'a=more&m='+method+'&p='+page+'&ajax=1',			cache : false,			async : true,			dataType : 'json',			success : function(data) {				var result = eval(data.callback);				if (page < result.totalPages)				{					page++;					$('#show_mBlog').append(result.html);					_this.html(_v);				}				else				{					$('#show_mBlog').append(result.html);					_this.remove();					$('#show_mBlog').parent().append('<p class="overintro">已无更多信息！</p>');				}			},			beforeSend : function() {				_this.html('<br /><img src="'+RESOURCE_URL+'loading.gif" />');			}		});	});	function hg_load_more(data, total)	{		return {			html : data,			totalPages : total		};	}});</script>{/if}{else}<p>暂无信息！</p>{/if}