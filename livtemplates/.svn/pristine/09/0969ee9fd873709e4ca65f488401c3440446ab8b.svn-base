<hr class="hr_pic_lv">{if $action_imgs}<ul class="my_pic_list" id="pic_list">	{foreach $action_imgs as $k=>$v}	<li{if $k == 0} class="one"{/if}><a href="thread.php?thread_id={$v['thread_id']}"><img src="{$v['img_info']['host']}126x126/{$v['img_info']['filepath']}" /></a></li>	{/foreach}</ul>{if $more_action_imgs}<div class="gtalk_more moreCon" style="clear:both;" total="{$action_img_num}">点击获取更多信息...</div>{/if}<script type="text/javascript">$(function() {	var page = 2;	$('.moreCon').click(function() {		var _this = $(this);		var _v = $(this).html();		var total = _this.attr('total');		$.ajax({			type : 'post',			url : 'member.php',			data : 'a=get_my_action_imgs&uid='+uid+'&total='+total+'&p='+page+'&ajax=1',			cache : false,			async : true,			dataType : 'json',			success : function(data) {				var result = eval(data.callback);				if (page < result.totalPages)				{					page++;					$('#pic_list').append(result.html);					_this.html(_v);				}				else				{					$('#pic_list').append(result.html);					_this.remove();				}			},			beforeSend : function() {				_this.html('<br /><img src="'+RESOURCE_URL+'loading.gif" />');			}		});	});		function hg_call_action_images(data, total)	{		return {			html : data,			totalPages : total		};	}});</script>{else}<p>暂没有信息</p>{/if}