 @import 'http://localhost/livtemplates/tpl/lib/less/common_less.less';
 /*区块列表*/
.block-list{padding:@m10; 
    > li{width:@h246+@w100; height:@w150 + 20px; padding:@m10 + 5px; margin:@m10; float:left; background-color:lighten(@color-gray,34%);}
}
.page-sort{width:@w100 + 24px; position:relative; 
  span{.position-lefttop(0,0); display:inline-block; height: (@m10 + 1px)*2; line-height:(@m10 + 1px)*2; padding:0 @m10/2; color:#fff; background-color:rgba(0,0,0,0.5); }
  .bjt{width:@w100 + 14px ; height:170px; background-color:lighten(@color-gray,40%);
    img{width:100%; height:100%;}
  }
}
.block{
  > span{color:darken(@color-gray,14%); line-height:30px;
    em{font-style:normal; }
  }
}
.block-box{height:@w150 - @m10; width:@h246 - 10px; position:relative; overflow:hidden; overflow-y:auto;
  li{height:@w100 - 2px; text-align:center; margin:0 8px 4px 0; float:left; line-height:0;
    .jt{width:@w43 + @h25; height:@w43 + @h25; background-color:lighten(@color-gray,40%); line-height:@w43 + @h25;}
     img{max-width:@w43 + @h25; max-height:@w43 + @h25; vertical-align:middle; }
    span{width:@w43 + @h25 - 3px; line-height:30px; display:inline-block; color:darken(@color-gray,60%); .ellipsis(); }
    &:nth-child(3n){margin-right:0;}
  }
}