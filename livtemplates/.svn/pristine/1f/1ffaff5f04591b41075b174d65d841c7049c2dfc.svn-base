{code}$str = '';function showAll($arr){	global $str, $_INPUT;	if ($arr && is_array($arr))	{		foreach ($arr as $v)		{			$str .= '<tr id="org_'.$v['id'].'">';			$str .= '<td style="text-align:left;">'.sep($v['depath']).'<input type="checkbox" name="org_id" value="'.$v['id'].'" class="n-h" />'.$v['name'].'</td>';			$str .= '<td><span uri="?mid='.$_INPUT['mid'].'&a=orgform&id='.$v['id'].'&fid='.$_INPUT['fid'].'&pid='.$v['fid'].'&cid='.$_INPUT['fid'].'" class="columnBtn updateOrg">编辑</span>&nbsp;|&nbsp;<span uri="?mid='.$_INPUT['mid'].'&a=deleteOrg&id='.$v['id'].'" class="columnBtn deleteOrg">删除</span></td></tr>';			if ($v['sub']) {				showAll($v['sub']);			}		}	}	return $str;}function sep($num){	$sep_str = '';	for ($i=0;$i<($num-2)*2;$i++)	{		$sep_str .= '&nbsp;&nbsp;';	}	return $sep_str;}{/code}<table width="100%" border="0" cellspacing="0" cellpadding="0" class="columnList">	<thead>		<tr>			<th style="text-align:left;">组织名称</th>			<th width="15%">操作</th>		</tr>	</thead>	{if $formdata && is_array($formdata)}	<tbody>		{code}echo showAll($formdata);{/code}	</tbody>	{/if}	<tfoot>		<tr>			<td colspan="2" style="text-align:left;"><input type="checkbox" name="checkall" class="n-h" /><span class="columnBtn batchDelOrg">删除</span>&nbsp;|&nbsp;<span uri="?mid={$_INPUT['mid']}&a=orgform&fid={$_INPUT['fid']}&cid={$_INPUT['fid']}" class="columnBtn addOrg">添加</span></td>		</tr>	</tfoot></table>