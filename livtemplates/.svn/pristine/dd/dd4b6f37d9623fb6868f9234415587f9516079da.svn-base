<ul class="form_ul" style="margin-bottom:50px;">
	<li class="i">
		<div class="form_ul_div">
			<span  class="title">开启短URL：</span>
			<input type="checkbox" value="1" name='define[IS_SHORTURL]' {if $settings['define']['IS_SHORTURL']}checked=checked{/if}/>
			<font class="important" style="color:red"></font>
		</div>
	</li>
	<li class="i">
	<div class="form_ul_div">
		<span  class="title">短URL域名：</span>
		<input type="text" value="{$settings['define']['SITE_URL']}" name='define[SITE_URL]' style="width:200px;">
