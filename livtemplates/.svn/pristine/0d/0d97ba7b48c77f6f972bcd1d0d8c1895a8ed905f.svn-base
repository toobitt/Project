<ul class="form_ul">	<li class="i">		<div class="form_ul_div">			<span class="title">&nbsp;&nbsp;&nbsp;默认角色：</span>			{if $settings['role']}			{foreach $settings['role'] as $role}			{if $role['id']}			<input type="checkbox" id="role_{$role['id']}" class="n-h" name="base[default_role][]" value="{$role['id']}"{if in_array($role['id'], $settings['base']['default_role'])} checked="checked"{/if} /><label for="role_{$role['id']}">{$role['name']}</label>			{/if}			{/foreach}			{/if}		</div>	</li></ul>