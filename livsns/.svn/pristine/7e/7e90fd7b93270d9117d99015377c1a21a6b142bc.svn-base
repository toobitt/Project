<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>用户管理中心-用户组管理</title>
<link href="images/user.css" rel="stylesheet" type="text/css" />
<script src="images/new_tab.js" type="text/javascript"></script>
<!--[if IE 6]>
<link href="images/ie6.css" rel="stylesheet" type="text/css" />
<![endif]-->
</head>

<body>
<script src="js/common.js" type="text/javascript"></script>
<script type="text/javascript">
	function switchbtn(btn) {
		$('srchuserdiv').style.display = btn == 'srch' ? '' : 'none';
		$('srchuserdiv').className = btn == 'srch' ? 'tabcontentcur' : '' ;
		$('srchuserbtn').className = btn == 'srch' ? 'tabcurrent' : '';
		$('adduserdiv').style.display = btn == 'srch' ? 'none' : '';
		$('adduserdiv').className = btn == 'srch' ? '' : 'tabcontentcur';
		$('adduserbtn').className = btn == 'srch' ? '' : 'tabcurrent';
		$('tmenu').style.height = btn == 'srch' ? '80'+'px' : '280'+'px';
	}
</script>

<div class="warp">

	<div class="header">
        <h1><a href="admin.php"><img src="images/logo.jpg" alt="用户管理中心" /></a></h1>
        <ul class="menu">
            <li><a onFocus="this.blur();" href="admin.php" title="应用管理">首页</a></li>
            <li><a onFocus="this.blur();" href="admin.php?m=app&a=ls" title="应用管理">应用管理</a></li>
            <li><a onFocus="this.blur();" href="admin.php?m=user&a=ls" title="用户管理">用户管理</a></li>
            <li><a onFocus="this.blur();" href="admin.php?m=uset&a=ls" title="用户设置">用户设置</a></li>  
            <li class="cur"><span>用户组设置</span></li>
            <li><a onFocus="this.blur();" href="admin.php?m=admin&a=ls" title="管理员">管理员</a></li>
            <li><a onFocus="this.blur();" href="admin.php?m=badword&a=ls" title="语句过滤">语句过滤</a></li>
            <li><a onFocus="this.blur();" href="admin.php?m=db&a=ls" title="数据备份">数据备份</a></li>
            <li><a onFocus="this.blur();" href="admin.php?m=cache&a=update" title="更新缓存">更新缓存</a></li>
        </ul>
        <div class="admin_zone">
            administrator<a href="admin.php?m=user&a=logout" class="logout">退出</a>
        </div>
    </div>
	<div>{if $status === 'invalid'}<font color='red'>操作无效</font>{elseif $status === 'N'}<font color='red'>请全部填写</font>{/if}</div>
	<!--{if $a != 'edit'}-->	
	<div class="search_add">
		
		<h3 class="search_add_tab">
        	<a class="cur" href="javascript:void(0);"  onclick="javascript:void(0);"><span>添加用户组</span></a>
        </h3>
		
		<div class="search_user">
			<div id="tab_1_1">
			<form action="admin.php?m=ugroup&a=add" method="post">
				<input type="hidden" name="formhash" value="{FORMHASH}" />
				<table width="100%">
					<tr>
						<td>用户组名称:</td>
						<td><input type="text" name="ug_name" class="txt" /></td>
						<td>排序:</td>
						<td><input type="text" name="ug_order" class="txt" /></td>
					</tr>
					<tr style="padding:10px 0px;"></tr>
					<tr>
						<td>用户组描述:</td>
						<td colspan='3'><textarea rows='5' cols='30' name="ug_descr" class="txt"></textarea></td>
					</tr>
					<tr>
						<td colspan='3'><input type="submit" value="添 加" class="btn" /></td>
					</tr>
				</table>
			</form>					
			</div>			
		</div>
				
	</div>
	<br />

	<div class="app_list">
		<h3 class="tle"><strong>用户组设置</strong></h3>
		<div class="app_list_c">
			<div class="mainbox">
				<!--{if $ugrouplist }-->
						<table class="datalist fixwidth" width="100%">
						<thead>
							<tr>
								<th>用户组名称</th>								
								<th>用户组描述</th>
								<th>用户组排序</th>
								<th>操作</th>
							</tr>
						</thead>	
							<!--{loop $ugrouplist $ugroup}-->
								<tr>
									<td class="option">{$ugroup[groupname]}</td>
									<td class="tdinput">{$ugroup[groupdesc]}</td>
									<td>{$ugroup[order_id]}</td>							
									<td colspan='2'>
										<a href="admin.php?m=ugroup&a=edit&group_id={$ugroup[id]}">编辑</a> | 
										<a href="admin.php?m=ugroup&a=del&group_id={$ugroup[id]}" onclick="return confirm('该操作不可恢复，您确认要删除这条积分规则吗？');">删除</a>
									</td>
								</tr>
							<!--{/loop}-->
						</table>
				<!--{else}-->
					<div class="note">
						<p class="i">暂无数据</p>
					</div>
				<!--{/if}-->
			</div>
		</div>
	</div>
	<!--{elseif $a == 'edit'}-->
	<div class="app_list">
	
			<h3 class="tle"><strong>编辑用户组</strong>
				<a href="admin.php?m=ugroup&a=ls" class="sgbtn">返回用户组列表</a>
			</h3>
				<div class="correctmsg"><p>编辑成功</p></div>
			<div class="app_list_c">
				<div class="mainbox">
					<form action="admin.php?m=ugroup&a=update&group_id={$ugroupArr[id]}" method="post">
					<input type="hidden" name="formhash" value="{FORMHASH}" />
						<table class="opt">
							<tr>
								<td>用户组名称：</td>
								<td><input type="text" name="group_name" value="{$ugroupArr[groupname]}" class="txt" /></td>
							</tr>
							<tr>
								<td>用户组描述：</td>
								<td>
									<textarea rows='5' cols='30' name='group_desc'>{$ugroupArr[groupdesc]}</textarea>
								</td>
							</tr>
							<tr>
								<td>排序：</td>
								<td><input type="text" name="group_order" value="{$ugroupArr[order_id]}" class="txt" /></td>
							</tr>
						</table>
						<div class="opt"><input type="submit" name="ugroup_edit" value=" {lang submit} " class="btn" tabindex="3" /></div>
					</form>
				</div>
			</div>
	</div>
	<!--{/if}-->			
</div>

</body>
</html>