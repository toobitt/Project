<?phpclass messagesendClass extends InitFrm{	public function __construct()	{		parent::__construct();	}		public function __destruct()	{		parent::__destruct();	}		public function show($offset, $count, $data)	{		if ($count != -1)		{			$data_limit = ' LIMIT ' . $offset . ' , ' . $count;		}		$sql = 'SELECT * FROM ' . DB_PREFIX . 'send WHERE active = 1 ';		if($data)		{			$condition = $data;		}		if ($condition) $sql .= $condition;		$sql .= ' ORDER BY id DESC';		if ($data_limit) $sql .= $data_limit;		$query = $this->db->query($sql);		$info = array();		while ($rows = $this->db->fetch_array($query))		{			$rows['back_status'] = $this->settings['back_status'];			$rows['audio_status'] = $this->settings['audio_status'];			$info[] = $rows;		}		return $info;	}		//根据关键字查询总数	public function count($data)	{		$sql = 'SELECT COUNT(id) AS total FROM ' . DB_PREFIX . 'send WHERE active = 1';		$sql .= $condition;		return $this->db->query_first($sql);	}			//根据条件查询是否存在	public function exists_send($kw,$data)	{		$sql = 'SELECT * FROM ' . DB_PREFIX . 'send WHERE active = 1 ';				if (is_string($data))		{			$sql .= " AND " . $kw . " = " . $data . " ";		}		elseif (is_int($data))		{			$sql .= " AND " . $kw . " = ' . $data . ' ";		}		$query = $this->db->query($sql);		$info = array();		while ($rows = $this->db->fetch_array($query))		{			$info[] = $rows;		}		return $info;	}		//提供给发送的函数	public function show_send()	{		$sql = 'SELECT * FROM ' . DB_PREFIX . 'send WHERE active = 1 and backstatus = 1 ';		$query = $this->db->query($sql);		$info = array();		while ($rows = $this->db->fetch_array($query))		{			$info[] = $rows;		}		return $info;	}		//信息基本信息读取 $id	public function detail($id)	{		$sql = 'SELECT * FROM ' . DB_PREFIX . 'send WHERE active = 1 and id = ' . $id;		$result = array();		$result = $this->db->query_first($sql);		$result['back_status'] = $this->settings['back_status'];		$result['audio_status'] = $this->settings['audio_status'];		return $result;	}			//基本信息添加操作	public function create($data)	{		$fields = array();		foreach($data as $k=>$v)		{			if (is_string($v))			{				$fields[] = $k . "='" . $v . "'";			}			elseif (is_int($v))			{				$fields[] = $k . '=' . $v;			}		}		$sql = 'INSERT INTO ' . DB_PREFIX . 'send SET ' . implode(',', $fields);		$this->db->query($sql);				$data['id'] = $this->db->insert_id();		if ($data['id'])		{			return $data;		}		return false;	}			//更新基本信息	public function update($data, $id)	{		$fields = array();		foreach($data as $k=>$v)		{			if (is_string($v))			{				$fields[] = $k . "='" . $v . "'";			}			elseif (is_int($v))			{				$fields[] = $k . '=' . $v;			}		}		$sql = 'UPDATE ' . DB_PREFIX . 'send SET ' . implode(',', $fields) . ' WHERE 1';		if (is_int($id))		{			$sql .= ' AND id = ' . $id;		}		elseif (is_string($id))		{			$sql .= ' AND id in (' . $id . ')';		}		$this->db->query($sql);		return $data;	}		public function delete($id)	{		$sql = 'UPDATE ' . DB_PREFIX . 'send SET active = 0 WHERE 1';		if (is_int($id))		{			$sql .= ' AND id = ' . $id;		}		elseif (is_string($id))		{			$sql .= ' AND id in (' . $id . ')';		}		return $this->db->query($sql);	}	public function audit($id,$status)	{		$status = intval($status);		$sql = 'update '.DB_PREFIX.'send set status = '.$status.' where 1 ';		if (is_int($id))		{			$sql .= ' AND id = ' . $id;		}		elseif (is_string($id))		{			$sql .= ' AND id in (' . $id . ')';		}		if ($sql) return $this->db->query($sql);	}		public function emptyData($table)	{		$sql = 'TRUNCATE ' . DB_PREFIX . $table;		return $this->db->query($sql);	}	}?>