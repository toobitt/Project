<?phprequire_once './global.php';class topic_node extends adminBase{	public function __construct()	{		parent::__construct();	}	public function __destruct()	{		parent::__destruct();	}		//获取话题节点	public function show()	{		$this->setXmlNode('topic_types' , 'topic_type');		foreach($this->settings['topic_type'] as $k=>$v)		{			$result = array(				'id' => $k,				"name" => $v,				"fid" => 0,				"depth" => 1,				'attr' => $this->settings['topic_type_attr'][$k],				'input_k' => '_type',				'is_last' => 1			);			$this->addItem($result);		}		$this->output();	}}$out = new topic_node();$action = $_INPUT['a'];if(!method_exists($out, $action)){	$action = 'show';	}$out->$action();?>