{{input}}
<li>
	<div class="item-content">
		<div class="item-inner">
			<div class="item-title label">#name#</div>
			<div class="item-input">
				<input type="text" placeholder="#name#" name="#unique_name#" value="#brief#" />
			</div>
		</div>
	</div>
</li>
{{/input}}
{{textarea}}
<li>
	<div class="item-content siblings-imgbox item-textarea">
		<div class="item-inner">
			<div class="item-title label">#name#</div>
			<div class="item-input">
				<textarea placeholder="#name#" name="#unique_name#">#brief#</textarea>
			</div>
		</div>
	</div>
</li>
{{/textarea}}
{{split}}
<li>
	<div class="item-content item-img">
		<div class="img-box">
			<img src="#indexpic#"/>
		</div>
	</div>
</li>
{{/split}}